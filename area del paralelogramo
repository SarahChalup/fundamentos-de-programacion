#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main()
{
	float b,h,area;
	cout<<"ingresa la base: "<<endl;
	cin>>b;
	cout<<"ingresa la altura: "<<endl;
	cin>>h;
	area=b*h;
	cout<<"area: "<<endl;
	cout<<area<<endl;
	
	getch();

	
}
PSEINT
Proceso areadeunparalelogramo
	Escribir 'insertar la base:'
	Leer b
	Escribir 'insertar la altura:'
	Leer h
	Escribir 'area:'
	area<-(b*h)
	Escribir area
FinProceso
